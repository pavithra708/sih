{
  "expo": {
    "name": "bolt-expo-nativewind",
    "slug": "bolt-expo-nativewind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
   "plugins": [
  "expo-router",
  "expo-font",
  "expo-web-browser",
  "expo-secure-store"
],

    "experiments": {
      "typedRoutes": true
    },
    "android": {
      "package": "com.anonymous.boltexponativewind",
      "expo": {
        "android": {
          "permissions": ["CAMERA", "RECORD_AUDIO", "ACCESS_FINE_LOCATION"]
        },
        "ios": {
          "infoPlist": {
            "NSCameraUsageDescription": "Used to record SOS videos",
            "NSMicrophoneUsageDescription": "Used to record audio during SOS",
            "NSLocationWhenInUseUsageDescription": "Used to provide safety services based on your location"
          }
        }
      }
    }
  }
}